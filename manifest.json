{
  "manifest_version": 3,
  "name": "LinkedIn Job Eval",
  "version": "1.0.0",
  "description": "Evaluate whether a LinkedIn job is worth applying to â€” conservative, explainable verdict.",
  "permissions": ["activeTab", "storage", "scripting", "sidePanel"],
  "host_permissions": [
    "*://www.linkedin.com/*",
    "http://localhost:11434/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://openrouter.ai/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.groq.com/*"
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_title": "Evaluate this job",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["pdf.worker.mjs"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.linkedin.com/jobs/view/*",
        "*://www.linkedin.com/jobs/collections/*",
        "*://www.linkedin.com/jobs/search/*"
      ],
      "js": ["content.js"]
    }
  ]
}
